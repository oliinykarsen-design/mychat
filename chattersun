<body>

<div id="authScreen" class="auth-overlay">
    <div class="auth-card">
        <h1>Nexus Chat</h1>
        <p style="color: var(--text-secondary); margin-bottom: 25px;">Увійдіть, щоб розпочати спілкування</p>
        
        <div class="auth-input-group">
            <input id="userName" class="auth-input" placeholder="Ваше ім'я (для нових користувачів)">
        </div>
        <div class="auth-input-group">
            <input id="userEmail" class="auth-input" type="email" placeholder="Email">
        </div>
        <div class="auth-input-group">
            <input id="userPass" class="auth-input" type="password" placeholder="Пароль">
        </div>
        
        <label style="display: flex; align-items: center; gap: 10px; margin-bottom: 20px; font-size: 0.9rem; color: var(--text-secondary);">
            <input type="checkbox" id="botCheck"> Я не робот
        </label>
        
        <button class="auth-btn" onclick="handleAuth()">Продовжити</button>
    </div>
</div>

<div class="app-container">
    <div class="sidebar">
        <div class="header">
            <div class="profile-area">
                <img id="myPhoto" class="avatar" src="https://www.w3schools.com/howto/img_avatar.png">
                <b id="myNameDisplay">Завантаження...</b>
            </div>
            <div style="display: flex; gap: 5px;">
                <i class="fas fa-ellipsis-v icon-btn" style="font-size: 1rem;"></i>
                <i class="fas fa-sign-out-alt icon-btn" style="font-size: 1rem;" onclick="appLogout()" title="Вийти"></i>
            </div>
        </div>
        
        <div class="search-container">
            <div class="search-bar">
                <i class="fas fa-search"></i>
                <input type="text" id="userSearch" placeholder="Пошук контактів..." oninput="filterUsers()">
            </div>
        </div>

        <div id="userList" class="user-list">
            </div>
    </div>

    <div class="main-chat">
        <div id="welcomeView" class="welcome-screen">
            <i class="fas fa-comments"></i>
            <h2>Nexus для Windows</h2>
            <p>Оберіть користувача з лівої панелі, щоб почати чат.</p>
        </div>

        <div id="chatView" style="display: none; flex-direction: column; height: 100%;">
            <div class="chat-header">
                <img id="activeAvatar" class="avatar">
                <div>
                    <b id="activeNameDisplay">Ім'я</b>
                    <div id="activeStatus" class="user-status">online</div>
                </div>
            </div>

            <div id="messagesList" class="messages-area">
                </div>

            <div class="chat-footer">
                <div class="icon-btn"><i class="far fa-smile"></i></div>
                <div class="icon-btn"><i class="fas fa-paperclip"></i></div>
                <input type="text" id="msgInput" class="message-input" placeholder="Введіть повідомлення...">
                <div class="icon-btn send-btn" onclick="sendMsg()"><i class="fas fa-paper-plane"></i></div>
            </div>
        </div>
    </div>
</div>

<script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
    import { getAuth, createUserWithEmailAndPassword, signInWithEmailAndPassword, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";
    import { getDatabase, ref, set, onValue, push, serverTimestamp, query, orderByChild } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-database.js";

    // ТВОЇ ДАНІ FIREBASE
    const firebaseConfig = {
        apiKey: "AIzaSyClFOMxAzvXcWFM9wlz6ZmtfvgOW14Vs5w",
        authDomain: "chattersun-174b5.firebaseapp.com",
        databaseURL: "https://chattersun-174b5-default-rtdb.europe-west1.firebasedatabase.app"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const db = getDatabase(app);

    let me = null;
    let activeId = null;
    let allUsers = [];

    /* ===== АВТОРИЗАЦІЯ ===== */
    window.handleAuth = async () => {
        const email = document.getElementById('userEmail').value.trim();
        const pass = document.getElementById('userPass').value;
        const name = document.getElementById('userName').value.trim();
        const bot = document.getElementById('botCheck').checked;

        if(!bot) return alert("Доведіть, що ви не бот");
        if(!email || !pass) return alert("Заповніть пошту та пароль");

        try {
            // Реєстрація
            const res = await createUserWithEmailAndPassword(auth, email, pass);
            await set(ref(db, 'users/' + res.user.uid), {
                name: name || "Користувач",
                email: email,
                lastSeen: serverTimestamp()
            });
        } catch (e) {
            // Якщо аккаунт вже є - вхід
            if (e.code === 'auth/email-already-in-use') {
                signInWithEmailAndPassword(auth, email, pass).catch(err => alert("Помилка: " + err.message));
            } else {
                alert(e.message);
            }
        }
    };

    window.appLogout = () => signOut(auth).then(() => location.reload());

    onAuthStateChanged(auth, user => {
        if (user) {
            me = user;
            document.getElementById('authScreen').style.opacity = '0';
            setTimeout(() => document.getElementById('authScreen').style.display = 'none', 500);
            
            // Завантаження мого профілю
            onValue(ref(db, 'users/' + user.uid), s => {
                if (s.exists()) {
                    document.getElementById('myNameDisplay').textContent = s.val().name;
                    document.getElementById('myPhoto').src = `https://ui-avatars.com/api/?name=${encodeURIComponent(s.val().name)}&background=00a884&color=fff`;
                }
            });
            loadUserList();
        }
    });

    /* ===== СПИСОК КОРИСТУВАЧІВ ===== */
    function loadUserList() {
        onValue(ref(db, 'users'), snap => {
            const listDiv = document.getElementById('userList');
            listDiv.innerHTML = '';
            allUsers = [];

            snap.forEach(child => {
                if (child.key === me.uid) return;
                const u = child.val();
                u.id = child.key;
                allUsers.push(u);
                renderUserItem(u);
            });
        });
    }

    function renderUserItem(u) {
        const listDiv = document.getElementById('userList');
        const item = document.createElement('div');
        item.className = 'user-item' + (activeId === u.id ? ' active' : '');
        item.innerHTML = `
            <img class="avatar" src="https://ui-avatars.com/api/?name=${encodeURIComponent(u.name)}&background=random">
            <div class="user-info">
                <span class="user-name">${u.name}</span>
                <span class="user-status">Натисніть, щоб почати...</span>
            </div>
        `;
        item.onclick = () => openConversation(u);
        listDiv.appendChild(item);
    }

    window.filterUsers = () => {
        const query = document.getElementById('userSearch').value.toLowerCase();
        const listDiv = document.getElementById('userList');
        listDiv.innerHTML = '';
        allUsers.filter(u => u.name.toLowerCase().includes(query)).forEach(u => renderUserItem(u));
    };

    /* ===== ЧАТ ===== */
    function openConversation(user) {
        activeId = user.id;
        document.getElementById('welcomeView').style.display = 'none';
        document.getElementById('chatView').style.display = 'flex';
        document.getElementById('activeNameDisplay').textContent = user.name;
        document.getElementById('activeAvatar').src = `https://ui-avatars.com/api/?name=${encodeURIComponent(user.name)}&background=random`;
        
        // Позначаємо активного в списку
        document.querySelectorAll('.user-item').forEach(el => el.classList.remove('active'));
        
        const roomId = me.uid < user.id ? me.uid + '_' + user.id : user.id + '_' + me.uid;
        
        onValue(ref(db, 'msgs/' + roomId), snap => {
            const box = document.getElementById('messagesList');
            box.innerHTML = '';
            snap.forEach(mSnap => {
                const m = mSnap.val();
                const row = document.createElement('div');
                row.className = 'msg-row ' + (m.sid === me.uid ? 'me' : 'them');
                row.innerHTML = `
                    <div class="msg-bubble">
                        ${m.txt}
                        <div class="msg-time">${m.time}</div>
                    </div>
                `;
                box.appendChild(row);
            });
            box.scrollTop = box.scrollHeight;
        });
    }

    window.sendMsg = () => {
        const input = document.getElementById('msgInput');
        const txt = input.value.trim();
        if (!txt || !activeId) return;

        const roomId = me.uid < activeId ? me.uid + '_' + activeId : activeId + '_' + me.uid;
        push(ref(db, 'msgs/' + roomId), {
            sid: me.uid,
            txt: txt.replace(/[<>]/g, ''),
            time: new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }),
            ts: serverTimestamp()
        });
        input.value = '';
    };

    document.getElementById('msgInput').onkeypress = e => { if(e.key === 'Enter') sendMsg(); };
</script>

</body>
</html>

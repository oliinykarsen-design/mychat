    <script type="module">
        /* NEXUS CORE SYSTEM 
           Ініціалізація високопродуктивних модулів Firebase 10.7
        */
        import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
        import { getDatabase, ref, set, onValue, push, serverTimestamp, update, remove, onDisconnect } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-database.js";
        import { getAuth, createUserWithEmailAndPassword, signInWithEmailAndPassword, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js";

        const FB_CONFIG = {
            apiKey: "AIzaSyClFOMxAzvXcWFM9wlz6ZmtfvgOW14Vs5w",
            authDomain: "chattersun-174b5.firebaseapp.com",
            databaseURL: "https://chattersun-174b5-default-rtdb.europe-west1.firebasedatabase.app"
        };

        const NEXUS = initializeApp(FB_CONFIG);
        const DB = getDatabase(NEXUS);
        const AUTH = getAuth(NEXUS);

        /**
         * GLOBAL APPLICATION STATE (SINGLETON)
         */
        const TITAN_STATE = {
            currentUser: null,
            activeTargetId: null,
            activeRoomId: null,
            contactCache: [],
            voiceRecorder: null,
            audioChunks: [],
            isRecording: false,
            lastActivity: Date.now(),
            editModeId: null
        };

        /* ============================================================
           MODULE: SystemEngine - Authentication & Lifecycle
           ============================================================ */
        window.SystemEngine = {
            async processAuth() {
                console.log("[TITAN]: Initializing Auth Security Handshake...");
                const name = document.getElementById('regName').value;
                const email = document.getElementById('regEmail').value.trim();
                const pass = document.getElementById('regPass').value;
                const captcha = document.getElementById('humanOnly').checked;

                if (!captcha) return alert("Помилка верифікації: Доведіть, що ви людина.");
                if (email.length < 5 || pass.length < 6) return alert("Пароль занадто слабкий або Email невірний.");

                try {
                    const result = await createUserWithEmailAndPassword(AUTH, email, pass);
                    await set(ref(DB, `users/${result.user.uid}`), {
                        name: name || "Titan User",
                        email: email,
                        online: true,
                        bio: "Використовую Nexus Titan OS для безпечного зв'язку.",
                        joined: serverTimestamp()
                    });
                } catch (err) {
                    if (err.code === 'auth/email-already-in-use') {
                        signInWithEmailAndPassword(AUTH, email, pass).catch(e => alert("Вхід заборонено: " + e.message));
                    } else { alert("Критична помилка ядра: " + err.message); }
                }
            },

            terminateSession() {
                if (TITAN_STATE.currentUser) {
                    update(ref(DB, `users/${TITAN_STATE.currentUser.uid}`), { online: false });
                    signOut(AUTH).then(() => location.reload());
                }
            }
        };

        // Auth Observer Loop
        onAuthStateChanged(AUTH, user => {
            if (user) {
                TITAN_STATE.currentUser = user;
                document.getElementById('authGate').style.display = 'none';
                document.getElementById('mainWorkspace').classList.add('active');
                
                // Presence Engine Initialization
                const presenceRef = ref(DB, `users/${user.uid}/online`);
                set(presenceRef, true);
                onDisconnect(presenceRef).set(false);

                // Personal Data Sync
                onValue(ref(DB, `users/${user.uid}`), snap => {
                    if (snap.exists()) {
                        const data = snap.val();
                        document.getElementById('userNameDisplay').textContent = data.name;
                        document.getElementById('userThumb').src = `https://ui-avatars.com/api/?name=${encodeURIComponent(data.name)}&background=random`;
                    }
                });

                SystemUI.bootstrap();
            } else {
                document.getElementById('authGate').style.display = 'flex';
            }
        });

        /* ============================================================
           MODULE: SystemUI - Interface & UX Management
           ============================================================ */
        window.SystemUI = {
            bootstrap() {
                onValue(ref(DB, 'users'), snap => {
                    TITAN_STATE.contactCache = [];
                    snap.forEach(child => {
                        if (child.key !== TITAN_STATE.currentUser.uid) {
                            TITAN_STATE.contactCache.push({ uid: child.key, ...child.val() });
                        }
                    });
                    this.renderContacts(TITAN_STATE.contactCache);
                });
            },

            renderContacts(list) {
                const container = document.getElementById('userCollection');
                container.innerHTML = '';
                
                list.forEach(user => {
                    const row = document.createElement('div');
                    row.className = `nx-user-row ${TITAN_STATE.activeTargetId === user.uid ? 'active' : ''}`;
                    row.innerHTML = `
                        <div style="position:relative;">
                            <img class="nx-avatar-md" src="https://ui-avatars.com/api/?name=${encodeURIComponent(user.name)}&background=random">
                            <div class="online-dot ${user.online ? 'on' : ''}"></div>
                        </div>
                        <div class="user-meta">
                            <div class="user-name-row">
                                <b>${user.name}</b>
                                <small style="opacity:0.5; font-weight:normal;">щойно</small>
                            </div>
                            <div class="user-status-msg">${user.online ? 'Online' : 'Offline'} | ${user.bio || ''}</div>
                        </div>
                    `;
                    row.onclick = () => ChatEngine.initSession(user);
                    container.appendChild(row);
                });
            },

            filterContacts() {
                const query = document.getElementById('userSearchBar').value.toLowerCase();
                const filtered = TITAN_STATE.contactCache.filter(u => u.name.toLowerCase().includes(query));
                this.renderContacts(filtered);
            },

            toggleEmoji() {
                const anchor = document.getElementById('emoji-pop-anchor');
                anchor.style.display = anchor.style.display === 'block' ? 'none' : 'block';
            },

            showSettings() {
                const overlay = document.getElementById('modalOverlay');
                overlay.innerHTML = `
                    <div class="modal-box animate__animated animate__zoomIn">
                        <h3>Профіль Користувача</h3>
                        <p style="margin-top:10px; color:var(--nx-text-dim);">Тут ви можете налаштувати свою публічну інформацію.</p>
                        <input id="editBio" class="shield-field" style="margin-top:20px;" placeholder="Ваш статус (Bio)">
                        <div style="display:flex; gap:10px; margin-top:20px;">
                            <button class="shield-btn" onclick="SystemUI.saveSettings()">Зберегти</button>
                            <button class="shield-btn" style="background:var(--nx-danger);" onclick="SystemUI.closeModal()">Закрити</button>
                        </div>
                    </div>
                `;
                overlay.style.display = 'flex';
            },

            saveSettings() {
                const bio = document.getElementById('editBio').value;
                update(ref(DB, `users/${TITAN_STATE.currentUser.uid}`), { bio: bio });
                this.closeModal();
            },

            closeModal() { document.getElementById('modalOverlay').style.display = 'none'; }
        };

        /* ============================================================
           MODULE: ChatEngine - Real-time Communication & Media
           ============================================================ */
        window.ChatEngine = {
            initSession(partner) {
                TITAN_STATE.activeTargetId = partner.uid;
                TITAN_STATE.activeRoomId = TITAN_STATE.currentUser.uid < partner.uid 
                    ? `${TITAN_STATE.currentUser.uid}_${partner.uid}` 
                    : `${partner.uid}_${TITAN_STATE.currentUser.uid}`;
                
                document.getElementById('emptyPlaceholder').style.display = 'none';
                document.getElementById('activeChatUI').style.display = 'flex';
                document.getElementById('activePartnerName').textContent = partner.name;
                document.getElementById('activePartnerPic').src = `https://ui-avatars.com/api/?name=${encodeURIComponent(partner.name)}&background=random`;
                document.getElementById('activeStatusLabel').textContent = partner.online ? 'В мережі (AES-256)' : 'Офлайн';
                
                this.syncHistory();
            },

            syncHistory() {
                const viewport = document.getElementById('messageViewport');
                onValue(ref(DB, `msgs/${TITAN_STATE.activeRoomId}`), snap => {
                    viewport.innerHTML = '';
                    snap.forEach(mSnap => {
                        const m = mSnap.val();
                        const row = document.createElement('div');
                        row.className = `nx-msg-wrapper ${m.sid === TITAN_STATE.currentUser.uid ? 'me' : 'them'}`;
                        
                        let payload = m.text ? `<div>${m.text}</div>` : '';
                        if (m.type === 'image') payload += `<img src="${m.url}" class="media-asset">`;
                        if (m.type === 'video') payload += `<video src="${m.url}" controls class="media-asset"></video>`;
                        if (m.type === 'voice') payload += `<audio src="${m.url}" controls style="height:35px; width:230px; border-radius:10px;"></audio>`;

                        const readStatus = m.read ? `<i class="fas fa-check-double" style="color:var(--nx-primary)"></i>` : `<i class="fas fa-check"></i>`;

                        row.innerHTML = `
                            <div class="nx-bubble animate__animated animate__fadeInUp">
                                ${payload}
                                <div class="nx-meta-info">
                                    ${m.edited ? '<small>(змінено)</small>' : ''}
                                    ${m.time} 
                                    ${m.sid === TITAN_STATE.currentUser.uid ? readStatus : ''}
                                </div>
                            </div>
                        `;

                        // Контекстне меню (Видалення / Редагування)
                        if (m.sid === TITAN_STATE.currentUser.uid) {
                            row.oncontextmenu = (e) => {
                                e.preventDefault();
                                const act = prompt("Оберіть дію: 1 - Редагувати, 2 - Видалити для всіх, 3 - Скасувати");
                                if (act === '1' && m.text) this.openEditor(mSnap.key, m.text);
                                if (act === '2') { if(confirm("Видалити повідомлення?")) remove(ref(DB, `msgs/${TITAN_STATE.activeRoomId}/${mSnap.key}`)); }
                            };
                        } else if (!m.read) {
                            // Автоматичне позначення як прочитаного
                            update(ref(DB, `msgs/${TITAN_STATE.activeRoomId}/${mSnap.key}`), { read: true });
                        }

                        viewport.appendChild(row);
                    });
                    viewport.scrollTop = viewport.scrollHeight;
                });
            },

            dispatch() {
                const inp = document.getElementById('mainComposer');
                const val = inp.value.trim();
                if (!val || !TITAN_STATE.activeRoomId) return;

                this.commit({ text: val.replace(/[<>]/g, ''), type: 'text' });
                inp.value = '';
                document.getElementById('emoji-pop-anchor').style.display = 'none';
            },

            processFileUpload(inp) {
                const file = inp.files[0];
                if (!file) return;
                const reader = new FileReader();
                reader.onload = () => {
                    this.commit({
                        url: reader.result,
                        type: file.type.startsWith('image') ? 'image' : 'video'
                    });
                };
                reader.readAsDataURL(file);
            },

            async toggleVoice() {
                const trigger = document.getElementById('voiceTrigger');
                if (!TITAN_STATE.isRecording) {
                    try {
                        const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
                        TITAN_STATE.voiceRecorder = new MediaRecorder(stream);
                        TITAN_STATE.audioChunks = [];
                        
                        TITAN_STATE.voiceRecorder.ondataavailable = e => TITAN_STATE.audioChunks.push(e.data);
                        TITAN_STATE.voiceRecorder.onstop = () => {
                            const blob = new Blob(TITAN_STATE.audioChunks, { type: 'audio/ogg; codecs=opus' });
                            const reader = new FileReader();
                            reader.onload = () => this.commit({ url: reader.result, type: 'voice' });
                            reader.readAsDataURL(blob);
                        };
                        
                        TITAN_STATE.voiceRecorder.start();
                        TITAN_STATE.isRecording = true;
                        trigger.classList.add('recording-pulse');
                    } catch (e) { alert("Доступ до мікрофона заблоковано системою."); }
                } else {
                    TITAN_STATE.voiceRecorder.stop();
                    TITAN_STATE.isRecording = false;
                    trigger.classList.remove('recording-pulse');
                }
            },

            commit(data) {
                push(ref(DB, `msgs/${TITAN_STATE.activeRoomId}`), {
                    sid: TITAN_STATE.currentUser.uid,
                    time: new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' }),
                    timestamp: serverTimestamp(),
                    read: false,
                    edited: false,
                    ...data
                });
            },

            openEditor(id, oldText) {
                TITAN_STATE.editModeId = id;
                const overlay = document.getElementById('modalOverlay');
                overlay.innerHTML = `
                    <div class="modal-box">
                        <h3>Редагувати повідомлення</h3>
                        <input id="editInpField" class="shield-field" style="margin-top:20px;" value="${oldText}">
                        <div style="display:flex; gap:10px; margin-top:20px;">
                            <button class="shield-btn" onclick="ChatEngine.saveEdit()">Зберегти</button>
                            <button class="shield-btn" style="background:var(--nx-danger);" onclick="SystemUI.closeModal()">Скасувати</button>
                        </div>
                    </div>
                `;
                overlay.style.display = 'flex';
            },

            saveEdit() {
                const newVal = document.getElementById('editInpField').value;
                if(newVal && TITAN_STATE.editModeId) {
                    update(ref(DB, `msgs/${TITAN_STATE.activeRoomId}/${TITAN_STATE.editModeId}`), {
                        text: newVal,
                        edited: true
                    });
                    SystemUI.closeModal();
                }
            }
        };

        // Keyboard & Event Listeners
        document.getElementById('mainComposer').onkeydown = e => { if (e.key === 'Enter') ChatEngine.dispatch(); };
        document.querySelector('emoji-picker').addEventListener('emoji-click', e => {
            document.getElementById('mainComposer').value += e.detail.unicode;
        });

    </script>
</body>
</html>
